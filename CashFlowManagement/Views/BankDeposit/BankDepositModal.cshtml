@model CashFlowManagement.EntityModel.BankDepositIncomes
<div id="create-new-bank-deposit-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add new bank deposit income</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-3">Bank deposit income:</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Source, new { @type = "text", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Capital value:</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.CapitalValue, new { @type = "text", @class = "form-control input-mask" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Interest Yield:</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.InterestYield, new { @type = "text", @class = "form-control percentage" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Participant bank:</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.ParticipantBank, new { @type = "text", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Note:</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Note, new { @type = "text", @class = "form-control" })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-success create-bank-deposit">Create</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


