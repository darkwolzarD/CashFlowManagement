@model CashFlowManagement.Models.RealEstateLiabilityListViewModel

<div id="liability-table-div" class="col-md-8">
    <table id="liability-table" class="table table-condensed table-responsive">
        <thead>
            <tr>
                <th class="hidden"></th>
                <th class="text-center">Nguồn<br />vay nợ</th>
                <th class="text-center">Giá trị nợ</th>
                <th class="text-center">Loại<br />lãi suất</th>
                <th class="text-center">Số tháng<br />phải trả</th>
                <th class="text-center">Lãi suất vay</th>
                <th class="text-center">Ngày bắt<br />đầu vay</th>
                <th class="text-center">Ngày trả<br />hết nợ</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Liabilities.Any())
            {
            foreach (var liability in Model.Liabilities)
            {
            <tr>
                <td class="hidden"><input type="checkbox" class="checkbox liability-id" value="@liability.Id"/></td>
                <td>@Html.DisplayFor(x => liability.Source)</td>
                <td class="text-right">@Html.DisplayFor(x => liability.Value)</td>
                <td>@Html.DisplayFor(x => liability.InterestType)</td>
                <td class="text-right">@Html.DisplayFor(x => liability.PaymentPeriod)</td>
                <td class="text-right">@Html.DisplayFor(x => liability.InterestRate) / @Html.DisplayFor(x => liability.InterestRatePerX)</td>
                <td class="text-right">@Html.DisplayFor(x => liability.StartDate)</td>
                <td class="text-right">@Html.DisplayFor(x => liability.EndDate)</td>
                <td>
                    <a class="remove-real-estate-liability" href="#">
                        <span class="glyphicon glyphicon-remove text-danger"></span>
                    </a>
                </td>
            </tr>
            }
            }
            else
            {
            <tr>
                <td colspan="8" class="text-center">Không có có khoản nợ nào</td>
            </tr>
            }
        </tbody>
    </table>
</div>
