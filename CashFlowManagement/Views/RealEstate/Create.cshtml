@model CashFlowManagement.Models.RealEstateCreateViewModel
@using CashFlowManagement.Models
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="btn-group btn-breadcrumb">
            <a href="#" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
            <a href="#" class="btn btn-default">Tài sản</a>
            <a href="#" class="btn btn-default">Bất động sản</a>
            <a href="#" class="btn btn-default">Mua bất động sản</a>
        </div>
    </div>
</div>
<div class="clear10"></div>
<div class="row">
    <div class="col-md-6">
        <p style="font-size: 20px;">Khởi tạo bất động sản</p>
    </div>
    <div class="col-md-6 text-right">
        <button type="submit" class="btn btn-success create-real-estate">
            <span class="glyphicon glyphicon-ok"></span>
            Tạo bất động sản
        </button>
    </div>
</div>
<div class="row">
    @using (Html.BeginForm("Create", "RealEstate", FormMethod.Post, new { @id = "real-estate-form" }))
    {
        @Html.AntiForgeryToken()
        <div id="real-estate-div" class="col-md-6 col-md-offset-3">
            <h4>Thông tin bất động sản</h4>
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control input-sm" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
            @*<div class="form-group">
                @Html.LabelFor(x => x.BuyDate)
                <div class="input-group input-group-sm">
                    @Html.TextBoxFor(x => x.BuyDate, "{0:dd/MM/yyyy}", new { @class = "form-control input-sm date-picker-with-day" })
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </div>
                </div>
            </div>*@
            <div class="form-group">
                @Html.LabelFor(x => x.Value)
                @Html.EditorFor(x => x.Value, new { htmlAttributes = new { @class = "form-control input-mask input-sm" } })
                @Html.ValidationMessageFor(x => x.Value)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Income)
                @Html.EditorFor(x => x.Income, new { htmlAttributes = new { @class = "form-control input-mask input-sm" } })
                @Html.ValidationMessageFor(x => x.Income)
            </div>
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(x => x.IsInDept)
                    Bạn có vay khoản nợ nào để mua bất động sản này không?
                </label>
            </div>
        </div>
    }
    <div id="liability-div" class="col-md-9 hidden">
        @{ Html.RenderAction("_LiabilityForm"); }
        <div class="clear10"></div>
        @{ Html.RenderAction("_LiabilityTable"); }
    </div>
</div>
<script type="text/javascript" src="~/Scripts/realestate.js"></script>
<script type="text/javascript">
    var Url = {};
    Url._LiabilityForm = '@Url.Action("_LiabilityForm", "RealEstate")';
    Url._LiabilityTable = '@Url.Action("_LiabilityTable", "RealEstate")';
    Url.CreateRealEstate = '@Url.Action("Create", "RealEstate")';
</script>