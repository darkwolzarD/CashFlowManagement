@model CashFlowManagement.Models.RealEstateCreateViewModel
@{
    Layout = null;
}

<div id="real-estate-div" class="col-md-12">
    @using (Html.BeginForm("Create", "RealEstate", FormMethod.Post, new { @id = "real-estate-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control input-sm", autofocus = "true" })
            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
            @Html.ValidationMessage("CheckExistRealEstate", new { @class = "text-danger" })
            <p class="note text-danger">VD: Thông tin địa chỉ nhà/căn hộ/đất cho thuê</p>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Value)
            @Html.EditorFor(x => x.Value, new { htmlAttributes = new { @class = "form-control input-mask input-sm" } })
            @Html.ValidationMessageFor(x => x.Value, null, new { @class = "text-danger" })
            @Html.ValidationMessage("CompareRealEstateValueAndLiabilityValue", new { @class = "text-danger" })
            <p class="note text-danger">VD: 7.900.000.000</p>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Income)
            @Html.EditorFor(x => x.Income, new { htmlAttributes = new { @class = "form-control input-mask input-sm", placeholder = "Không bắt buộc" } })
            @Html.ValidationMessageFor(x => x.Income, null, new { @class = "text-danger" })
            <p class="note text-danger">VD: 25.000.000</p>
        </div>
        <div class="checkbox">
            <label class="text-danger">
                @Html.CheckBoxFor(x => x.IsInDebt)
                <strong>Bạn có vay nợ để mua bất động sản này!!!</strong>
            </label>
        </div>
    }
</div>