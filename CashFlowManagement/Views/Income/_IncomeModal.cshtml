@using CashFlowManagement.Constants
@using CashFlowManagement.EntityModel
@model CashFlowManagement.EntityModel.Incomes
<div id="create-new-income-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    @if (Model.IncomeType == (int)Constants.INCOME_TYPE.SALARY_INCOME)
                    {
                        @Html.Raw("Tạo mới thu nhập từ lương")
                    }
                </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-3">
                            @if (Model.IncomeType == (int)Constants.INCOME_TYPE.SALARY_INCOME)
                            {
                                @Html.Raw("Thu nhập từ lương:")
                            }
                        </label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Name, new { @type = "text", @class = "form-control" })
                            @Html.HiddenFor(x => x.IncomeType)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Ngày nhận lương hàng tháng:</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.IncomeDay, new { @Value = string.Empty, @type = "text", @class = "form-control input-mask" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Thu hàng tháng:</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Value, new { @Value = string.Empty, @type = "text", @class = "form-control input-mask" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Ghi chú:</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Note, new { @type = "text", @class = "form-control" })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-success create-income">Tạo mới</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
