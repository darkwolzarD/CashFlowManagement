@using CashFlowManagement.Constants
@using CashFlowManagement.EntityModel
@model CashFlowManagement.EntityModel.Expenses
<div id="update-expense-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    @if (Model.ExpenseType == (int)Constants.EXPENSE_TYPE.FAMILY)
                    {
                        @Html.Raw("Cập nhật chi tiêu gia đình")
                    }
                    else if (Model.ExpenseType == (int)Constants.EXPENSE_TYPE.OTHERS)
                    {
                        @Html.Raw("Cập nhật chi tiêu khác")
                    }
                </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-3">
                            @if (Model.ExpenseType == (int)Constants.EXPENSE_TYPE.FAMILY)
                            {
                                @Html.Raw("Chi tiêu gia đình:")
                            }
                        </label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Name, new { @type = "text", @class = "form-control" })
                            @Html.HiddenFor(x => x.Id)
                            @Html.HiddenFor(x => x.ExpenseType)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Ngày chi tiêu hàng tháng:</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.ExpenseDay, new { @type = "text", @class = "form-control input-mask" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Chi tiêu tháng:</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Value, new { @type = "text", @class = "form-control input-mask" })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-success save-expense">Cập nhật</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
