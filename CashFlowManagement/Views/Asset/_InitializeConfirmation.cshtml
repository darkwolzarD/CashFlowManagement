@using CashFlowManagement.ViewModels
@using CashFlowManagement.Constants
@using CashFlowManagement.Queries
@{
    DateTime current = DateTime.Now;
}

<div id="asset-confirmation" class="modal fade" role="dialog">
    <div class="modal-dialog" style="width: 1000px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    Xác nhận khởi tạo tài sản
                </h4>
            </div>
            <div class="modal-body">
            </div>
            <h4 style="padding-left: 20px;">Bất động sản</h4>
            @Html.Partial("_Report", model: AssetQueries.GetAssetByUser(UserQueries.GetCurrentUsername(), (int)Constants.ASSET_TYPE.REAL_ESTATE))
            <h4 style="padding-left: 20px;">Kinh doanh</h4>
            @Html.Partial("_Report", model: AssetQueries.GetAssetByUser(UserQueries.GetCurrentUsername(), (int)Constants.ASSET_TYPE.BUSINESS))
            <h4 style="padding-left: 20px;">Tài khoản tiết kiệm</h4>
            @Html.Partial("_Report", model: AssetQueries.GetAssetByUser(UserQueries.GetCurrentUsername(), (int)Constants.ASSET_TYPE.BANK_DEPOSIT))
            <h4 style="padding-left: 20px;">Chứng khoán</h4>
            @Html.Partial("_Report", model: AssetQueries.GetAssetByUser(UserQueries.GetCurrentUsername(), (int)Constants.ASSET_TYPE.STOCK))
            <h4 style="padding-left: 20px;">Bảo hiểm nhân thọ</h4>
            @Html.Partial("_Report", model: AssetQueries.GetAssetByUser(UserQueries.GetCurrentUsername(), (int)Constants.ASSET_TYPE.INSURANCE))
            <h4 style="padding-left: 20px;">Tài sản khác</h4>
            @Html.Partial("_Report", model: AssetQueries.GetAssetByUser(UserQueries.GetCurrentUsername(), (int)Constants.ASSET_TYPE.OTHERS))
            <div class="modal-footer text-center">
                <a href="@Url.Action("OtherAssetInitialize", "Account")" class="btn btn-success process-income" style="font-size: 11px;">
                    <span class="glyphicon glyphicon-ok"></span>
                    Xác nhận
                </a>
                <button type="button" class="btn btn-danger" data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove"></span>
                    Hủy xác nhận
                </button>
            </div>
        </div>
    </div>
</div>
